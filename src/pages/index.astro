---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <Navbar />
    <div class="h-screen w-full flex items-center justify-center">
      <div class="w-4/5 h-3/4 relative">
        <div class="z-50 w-full h-full flex flex-col pt-24 gap-10">
			<img src="./logo_hero.svg" class="h-80" alt="" />
			<p class="text-center text-2xl text-gray-300">
			  Bem vindo ao MonkeyDevs! </br> Somos uma organização de desenvolvimento de
			  softwares open-source.
			</p>
		</div>
		<div
          class="blur-3xl bg-gradient-to-tr from-[#175C58] from-45% to-[#512984] rounded-full opacity-30 w-full h-full absolute top-0 -z-10"
        >
        </div>
      </div>
    </div>
  </main>
</Layout>
