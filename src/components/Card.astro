---
 export interface Props {
    image?: string;
    title: string;
    paragraph: string;
    isCrispy?: boolean;
    link_href?:string
 }

 const { image, title, paragraph, link_href }  = Astro.props;
---
<a href={link_href} >

    <div class={`flex flex-col gap-3 h-full w-full rounded-xl text-white p-6 border-opacity-70  bg-[#1E293B] bg-opacity-50 shadow-lg hover:shadow-2xl transition-all   ${link_href ? `cursor-pointer` : ``}`}>
        <div class="flex flex-col gap-2  text-center">
            <h1 class="font-bold text-lg ">{title}</h1>
            <p class="text-sm break-words">{paragraph}</p>
        </div>
    </a>
</div>